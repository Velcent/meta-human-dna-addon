{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "name": "meta-human-dna-addon",
    "language": "en",
    "ignorePaths": [
        ".gitignore",
        ".venv",
        ".stubs-venv",
        "build",
        "scratches",
        "scripts",
        "tests",
        "reports",
        "node_modules",
        "*.lock",
        "*.pyc",
        "*.pyd",
        "*.so",
        "**/__pycache__/**",
        ".git",
        ".ruff_cache",
        ".pytest_cache",
        ".mypy_cache",
        "releases",
        "*.blend*",
        "*.dna",
        "*.json"
    ],
    "words": [
        "bpy",
        "rbf",
        "Raasch",
        "Steagall",
        "PYTHONUNBUFFERED"
    ],
    "dictionaries": [
        "python",
        "typescript",
        "css",
        "html",
        "bash",
        "filetypes",
        "softwareTerms",
        "companies"
    ],
    "enabledLanguageIds": [
        "python",
        "markdown",
        "yaml",
        "json",
        "jsonc",
        "toml",
        "html",
        "css",
        "javascript",
        "typescript"
    ],
    "useGitignore": true,
    "caseSensitive": false,
    "minWordLength": 3,
    "allowCompoundWords": true,
    "overrides": [
        {
            "filename": "src/**",
            "description": "Source code - Blender API and addon technical terms",
            "words": [
                "blf",
                "bmesh",
                "BSDF",
                "childof",
                "cls",
                "DCC",
                "depsgraph",
                "dsn",
                "Entrys",
                "fbx",
                "fcurve",
                "fcurves",
                "FRM",
                "HLT",
                "idname",
                "instancer",
                "lod",
                "lods",
                "msk",
                "nla",
                "pii",
                "pyc",
                "pyo",
                "PLR",
                "rbf",
                "rbfs",
                "tga",
                "tol",
                "TOPO",
                "TRIA",
                "TRIS",
                "UERBF",
                "UILIST",
                "UVMAP",
                "uvs",
                "verts",
                "whl",
                "xdg",
                "XYZ",
                "ZYX"
            ]
        },
        {
            "filename": "docs/**",
            "description": "Documentation - technical terms and misspelling flags",
            "words": [
                "LFS",
                "lod",
                "tga"
            ],
            "flagWords": []
        },
        {
            "filename": "pyproject.toml",
            "description": "Python tooling configuration - ruff rule codes and tool names",
            "words": [
                "bmesh",
                "cls",
                "datetimez",
                "dotenv",
                "DTZ",
                "env",
                "flynt",
                "FURB",
                "ICN",
                "PLR",
                "PLW",
                "PTH",
                "PYI",
                "pyupgrade",
                "rgx",
                "RSE",
                "RUF",
                "SLF",
                "TCH",
                "TID"
            ]
        }
    ]
}
